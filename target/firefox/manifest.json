{
  "manifest_version": 2,
  "name": "Tabliss-Immich",
  "short_name": "Tabliss",
  "version": "2.6.0",
  "description": "A beautiful New Tab page with many customisable backgrounds and widgets, with support for using an Immich album as a background image.",
  "applications": {
    "gecko": {
      "id": "extension@tabliss.io",
      "strict_min_version": "54.0"
    }
  },
  "chrome_settings_overrides": {
    "homepage": "index.html"
  },
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "icons": {
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage"]
}
